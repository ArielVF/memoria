<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subZoneAdmin.createSubZoneFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="5dp">

       <com.google.android.material.textfield.TextInputLayout
           android:layout_marginTop="15dp"
           android:id="@+id/layout_newSubzone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Nombre Subzona"
           app:errorEnabled="true"
           app:helperTextTextColor="@color/black"
           app:boxStrokeColor="@color/black"
           app:errorIconDrawable="@drawable/ic_error"
           app:boxBackgroundMode="outline"
           app:helperText="Agregue nombre de subzona"
           app:counterEnabled="true"
           app:counterMaxLength="50"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/newsubzone_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="text"
               android:maxLength="50"
               android:maxLines="1"/>
       </com.google.android.material.textfield.TextInputLayout>

       <Button
           android:id="@+id/create_newSubZone"
           android:layout_marginTop="15dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Agregar"
           android:drawableEnd="@drawable/add_icon"
           android:layout_gravity="center"/>

       <ImageButton
           android:id="@+id/info_addSubZone"
           android:layout_marginTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_baseline_info_24"
           android:background="@drawable/dialog_button_accept"
           android:layout_gravity="right"
           android:layout_marginEnd="25dp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="InformaciÃ³n"
           android:layout_gravity="right"
           android:textStyle="italic"
           android:textColor="@color/fifth"/>
   </LinearLayout>

</FrameLayout>