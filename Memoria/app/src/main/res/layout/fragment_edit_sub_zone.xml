<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subZoneAdmin.editSubZoneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="15dp"
            android:id="@+id/layout_newSubzone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Editar nombre Subzona"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            app:errorIconDrawable="@drawable/ic_error"
            app:boxBackgroundMode="outline"
            app:helperText="Edite el nombre de subzona"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newsubzone_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edit_new_SubZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:text="Editar "
                android:padding="10dp"
                android:drawableEnd="@drawable/edit_icon"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/delete_new_subzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/first"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Eliminar "
                android:drawableEnd="@drawable/delete_icon"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>