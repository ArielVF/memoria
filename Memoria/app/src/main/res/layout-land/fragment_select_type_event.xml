<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectTypeEvent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/event_p_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:drawableBottom="@drawable/location_permanent"
                android:backgroundTint="@color/third"
                android:text="Crear Evento en zona permamente"/>
            <TextView
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic|bold"
                android:background="@drawable/dialog_button_cancel"
                android:text="Inicie un evento en una zona que ya existe en el mapa."/>

            <Button
                android:id="@+id/event_t_button"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/third"
                android:drawableBottom="@drawable/location_anywhere"
                android:text="Crear evento en zona temporal"/>
            <TextView
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic|bold"
                android:background="@drawable/dialog_button_cancel"
                android:text="Inicie un evento en cualquier lugar, pero las zonas creadas en esta opción serán eliminadas tras culminar el evento."
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>